@model Mission08_0110.Models.Job

@* user can submit a task to the EnterJob view  *@
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <h1>Enter A Task</h1>
    <form method="post" class="needs-validation">
        <input type="hidden" asp-for="JobId" />
        <div class="form-group">
            <label asp-for="JobName">Task</label>
            <input required asp-for="JobName" class="form-control" />
            <div class="invalid-feedback">Task is required</div>
        </div>
        <div class="form-group">
            <label asp-for="DueDate">Due Date</label>
            @{
                string dueDateValue = Model?.DueDate?.ToString("yyyy-MM-dd") ?? "";
            }
            <input type="date" asp-for="DueDate" />
        </div>

        <div class="form-group">
            <label asp-for="Quadrant">Quadrant</label>
            <select required asp-for="Quadrant" class="form-control">
                <option value="" selected disabled>Please Select an Option</option>
                <option value="I">Quadrant I: Important / Urgent</option>
                <option value="II">Quadrant II: Important / Not Urgent</option>
                <option value="III">Quadrant III: Not Important / Urgent</option>
                <option value="IV">Quadrant IV: Not Important / Not Urgent</option>
            </select>
            <div class="invalid-feedback">Quadrant is required</div>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="@(ViewBag.Categories)" class="form-control">
                <option value="" selected disabled>Select a Category</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Completed">Completed</label>
            <select asp-for="Completed" class="form-control">
                <option value="" selected disabled>Please Select an Option</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit Task to Database</button>

    </form>
</div>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>