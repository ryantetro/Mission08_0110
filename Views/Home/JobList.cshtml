@model List<Job>
@* task list that has custom styles and the form for users to add a task to the quadrant view  *@

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Time Management Matrix</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .matrix {
            border: solid 2px #000;
            max-width: 600px;
            margin: 20px auto;
        }
        .matrix-header {
            background-color: #f7f5d1;
            text-align: center;
            padding: 10px;
            font-weight: bold;
            border-bottom: solid 2px #000;
        }
        .matrix-table {
            width: 100%;
            border-collapse: collapse;
        }
        .matrix-table th {
            background-color: #f7f5d1;
            padding: 10px;
            border: solid 2px #000;
            color: black;
        }
        .matrix-table td {
            border: solid 2px #000;
            padding: 10px;
            vertical-align: top;
        }
        .important {
            background-color: #fff8dc;
        }
        .not-important {
            background-color: #f5f5f5;
        }
        .urgent {
            background-color: #ffebcd;
        }
        .not-urgent {
            background-color: #f0e68c;
        }
    </style>
</head>
<body>
    <div class="matrix">
        <div class="matrix-header">
            Stephen Covey's Time Management Matrix
            <a class="btn btn-default" asp-area="" asp-controller="Home" asp-action="EnterAJob" style="border: 2px solid #000000; /* Black outline */ padding: 5px; /* Optional: Adjusts spacing inside the button */">Add A Task</a>
        </div>
        <table class="matrix-table">
            <tr>
                <th></th>
                <th>Urgent</th>
                <th>Not Urgent</th>
            </tr>
            <tr>
                <td class="important">Important</td>
                <td class="important urgent">
                    <div class="container mt-4">
                        <div class="row">
                            <div class="col-12">
                                <h2 class="mb-3">Urgent/Important</h2>
                                <table class="table table-bordered table-hover table-responsive-sm table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Job Name</th>
                                            <th>Due Date</th>
                                            <th>Category Name</th>
                                            <th>Completed</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var temp in Model)
                                        {
                                            if (temp.Quadrant == "I" && temp.Completed == false)
                                            {
                                                <tr>
                                                    <td>@temp.JobName</td>
                                                    <td>@temp.DueDate</td>
                                                    <td>@temp.Category?.Name
                                                    <td>@temp.Completed</td>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="Action Buttons">
                                                            <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@temp.JobId">Edit</a>
                                                            <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@temp.JobId">Delete</a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </td>
                <td class="important not-urgent">
                    <div class="container mt-4">
                        <div class="row">
                            <div class="col-12">
                                <h2 class="mb-3">Not Urgent/Important</h2>
                                <table class="table table-bordered table-hover table-responsive-sm table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Job Name</th>
                                            <th>Due Date</th>
                                            <th>Category Name</th>
                                            <th>Completed</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var temp in Model)
                                        {
                                            if (temp.Quadrant == "II" && temp.Completed == false)
                                            {
                                                <tr>
                                                    <td>@temp.JobName</td>
                                                    <td>@temp.DueDate</td>
                                                    <td>@temp.Category?.Name</td>
                                                    <td>@temp.Completed</td>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="Action Buttons">
                                                            <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@temp.JobId">Edit</a>
                                                            <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@temp.JobId">Delete</a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="not-important">Not Important</td>
                <td class="not-important urgent">
                    <div class="container mt-4">
                        <div class="row">
                            <div class="col-12">
                                <h2 class="mb-3">Urgent/Not Important</h2>
                                <table class="table table-bordered table-hover table-responsive-sm table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Job Name</th>
                                            <th>Due Date</th>
                                            <th>Category Name</th>
                                            <th>Completed</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var temp in Model)
                                        {
                                            if (temp.Quadrant == "III" && temp.Completed == false)
                                            {
                                                <tr>
                                                    <td>@temp.JobName</td>
                                                    <td>@temp.DueDate</td>
                                                    <td>@temp.Category.Name
                                                    <td>@temp.Completed</td>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="Action Buttons">
                                                            <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@temp.JobId">Edit</a>
                                                            <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@temp.JobId">Delete</a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </td>
                <td class="not-important not-urgent">
                    <div class="container mt-4">
                        <div class="row">
                            <div class="col-12">
                                <h2 class="mb-3">Not Important/Not Urgent</h2>
                                <table class="table table-bordered table-hover table-responsive-sm table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Job Name</th>
                                            <th>Due Date</th>
                                            <th>Category Name</th>
                                            <th>Completed</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var temp in Model)
                                        {
                                            if (temp.Quadrant == "IV" && temp.Completed == false)
                                            {
                                                <tr>
                                                    <td>@temp.JobName</td>
                                                    <td>@temp.DueDate</td>
                                                    <td>@temp.Category.Name
                                                    <td>@temp.Completed</td>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="Action Buttons">
                                                            <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@temp.JobId">Edit</a>
                                                            <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@temp.JobId">Delete</a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>